DATABASE_URL="file:./prisma/dev.db"
PORT=3000
SESSION_SECRET="change-this-to-a-random-secret-in-production"
CORS_ORIGIN="http://localhost:5173"
SCRAPER_RATE_LIMIT_MS=3000
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10
# SCRAPER_USE_PUPPETEER=true   # Optional, local only: use headless Chrome for card pages (JS-rendered content, better accuracy). Not supported on Vercel serverless.
# ANTHROPIC_API_KEY=sk-ant-... # Optional: use Claude to extract min spend (dollars) and conditions. Requires @anthropic-ai/sdk.
# ANTHROPIC_MODEL=claude-3-5-haiku-20241022   # Optional; default is Haiku (cheapest). Use claude-3-5-sonnet-20241022 for higher accuracy.

# Optional: default superadmin account (created/updated on server startup)
# SUPERADMIN_EMAIL=admin@example.com
# SUPERADMIN_PASSWORD=your-secure-password
# SUPERADMIN_NAME=Admin